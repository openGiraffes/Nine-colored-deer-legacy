{
  "name": "Nine-colored-deer",
  "productName": "Nine-colored-deer",
  "version": "0.1.0",
  "description": "openGiraffes pc client",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --platform=win32 --arch=ia32",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "prettier:check": "prettier -c src *.md *.js *.json",
    "prettier:fix": "prettier -w src *.md *.js *.json",
    "typescript:check": "tsc --noEmit",
    "test": "npm run typescript:check && npm run lint && npm run prettier:check"
  },
  "keywords": [],
  "author": {
    "name": "openGiraffes"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/static/images/icon/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Nine-colored-deer"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-dmg": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "@electron-forge/plugin-webpack": "^6.0.5",
    "@types/follow-redirects": "^1.14.1",
    "@types/lodash": "^4.14.191",
    "@types/lunr": "^2.3.4",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/util.promisify": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "electron": "^16.2.5",
    "electron-winstaller": "^5.1.0",
    "eslint": "^8.36.0",
    "eslint-plugin-import": "^2.27.5",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "node-loader": "^2.0.0",
    "prettier": "^2.8.6",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@cliqz-oss/firefox-client": "0.3.1",
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "child_process": "^1.0.2",
    "date-fns": "^2.29.3",
    "electron-dl": "^3.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "extract-zip": "^2.0.1",
    "follow-redirects": "^1.15.2",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.1.1",
    "i18next": "^22.4.13",
    "lodash": "^4.17.21",
    "lunr": "^2.3.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.9.0",
    "util.promisify": "^1.1.1"
  },
  "browser": {
    "child_process": false
  }
}
